<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
		<h2>Form is invalid.  <%= pluralize(@user.errors.count, "error") %> exist. </h2>
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %> </li>
		<% end %>
		</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>

	<div class="field">  
      <%= f.label :password %>  <br />
      <%= f.password_field :password %>  
  	</div>  
    
    <div class="field">  
      <%= f.label :password_confirmation %>  <br />
      <%= f.password_field :password_confirmation %>  
    </div>
    
    <div class="actions"><%= f.submit %></div>  
 <% end %>